// Import necessary libraries
const fs = require('fs');
const puppeteer = require('puppeteer');

// Function to create a Roblox account
async function createRobloxAccount(username, password) {
    // Launch a headless browser
    const browser = await puppeteer.launch();
    const page = await browser.newPage();
    
    // Navigate to Roblox signup page
    await page.goto('https://www.roblox.com/signup');

    // Fill out signup form
    await page.type('#signup-username', username);
    await page.type('#signup-password', password);
    await page.click('#signup-button');

    // Wait for signup to complete
    await page.waitForNavigation();

    // Close the browser
    await browser.close();
}

// Function to save username and password to a text file
function saveCredentialsToFile(username, password) {
    const data = `Username: ${username}\nPassword: ${password}`;

    fs.writeFile('roblox_credentials.txt', data, (err) => {
        if (err) throw err;
        console.log('Roblox credentials saved to roblox_credentials.txt');
    });
}

// Usage
const username = 'your_username';
const password = 'your_password';

createRobloxAccount(username, password);
saveCredentialsToFile(username, password);
